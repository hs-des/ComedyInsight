# Server Configuration
PORT=3000
NODE_ENV=development

# PostgreSQL Database
# Option 1: Use DATABASE_URL (recommended for Docker)
# DATABASE_URL=postgres://postgres:postgres@db:5432/mydatabase
# Option 2: Use individual variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=comedyinsight
DB_USER=postgres
DB_PASSWORD=your_password_here
# Note: In Docker, use DB_HOST=db (internal hostname)

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Twilio SMS Configuration (optional for development)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=
APPLE_CLIENT_ID=
FACEBOOK_APP_ID=

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
FRONTEND_URL=http://localhost:3000

# S3/MinIO Configuration (for video downloads)
# For MinIO (local development)
# AWS_S3_ENDPOINT=http://localhost:9000
# For MinIO (Docker) - use internal hostname
AWS_S3_ENDPOINT=http://minio:9000
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET=comedyinsight-videos
AWS_S3_USE_PATH_STYLE=true
# MinIO Console Port (for admin access)
MINIO_PORT=9000

# For AWS S3 (production) - leave AWS_S3_ENDPOINT empty
# AWS_S3_ENDPOINT=
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_USE_PATH_STYLE=false

# Redis Configuration
# Option 1: Use REDIS_URL (recommended)
# REDIS_URL=redis://redis:6379
# Option 2: Use individual variables
REDIS_HOST=localhost
REDIS_PORT=6379
# Note: In Docker, use REDIS_HOST=redis (internal hostname)

# Subtitle Configuration
UPLOAD_DIR=./uploads/subtitles
SUBTITLE_BASE_URL=http://localhost:3000/subtitles

# Admin Dashboard Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# CORS Configuration
# CORS_ORIGIN=http://localhost:5173,http://localhost:3000
# Or use * for development (not recommended for production)
CORS_ORIGIN=*

